{
  "manifest_version": 3,
  "name": "Tweet Scraper",
  "version": "3.0",
  "description": "Scrapes public tweets from the X/Twitter web UI (educational/demo).",
  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://www.twitter.com/*",
    "https://x.com/*",
    "https://www.x.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Tweet Scraper"
  },
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*", "https://www.twitter.com/*", "https://x.com/*", "https://www.x.com/*"],
      "js": ["scraper.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "48": "icon48.png"
  }
}